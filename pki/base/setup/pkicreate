##############################################################
# Local Data Structures
##############################################################

# Useful pki references
@installed_files = ();
@installed_stray_directories = ();

%redirects = ();


##############################################################
# Local Variables
##############################################################

# Command-line variables (mandatory)
my $pki_instance_root  = "";
