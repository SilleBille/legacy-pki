my $logs_base_instance_symlink    = "logs";     # CA, KRA, OCSP, TKS, RA, TPS
my $run_base_instance_symlink     = "run";      # RA, TPS

# Base names
my $cgi_home_base_name           = "home/index.cgi";       # TPS
