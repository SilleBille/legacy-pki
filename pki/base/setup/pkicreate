my $webapps_base_instance_dir  = "webapps";   # CA, KRA, OCSP, TKS
my $work_base_instance_dir     = "work";      # CA, KRA, OCSP, TKS (Tomcat)

# Base instance symbolic link names
my $common_base_instance_symlink  = "common";   # CA, KRA, OCSP, TKS
